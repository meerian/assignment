html
  head 
    title="MyBank"
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet")
  body 
    div(class="container")
      h2(class="pb-2 ")="Current Username: " + data.username
      h2(class="pb-2 border-bottom")="Current Email: " + data.email
      if error 
        p(class="alert alert-danger")=error

      h2(class="pb-2 pt-5 border-bottom")="Change Email:"
      form(class="row g-3" method="post" action="")
        div(class="col-auto")
          input(type="text" class="form-control" name="email" placeholder="New Email")

        div(class="col-auto")
          button(type="submit" class="btn btn-primary mb-3")="Change"